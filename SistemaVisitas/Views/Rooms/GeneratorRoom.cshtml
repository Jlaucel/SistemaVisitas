@using SistemaVisitas.Models
@model GeneratorRoomViewModel
@{
    ViewData["Title"] = "Generator Room";
}



@using (Html.BeginForm("GeneratorRoom", "Rooms", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="card">
        <div class="card-header">
            <h2><strong>GENERATOR ROOM</strong></h2>
        </div>
        <div class="card-body card-block">
            <hr />
            <h4> <label style="padding-left:20px;" class=" form-control-label">Generadores Electricos</label> </h4>
            <hr />
            <div class="row form-group" style="padding-left:2em;">
                <div class=" col-md-3">
                    <label class=" form-control-label">Prueba de Bomba</label>
                </div>
                <div class=" col-md-1">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="PRUEBA_BOMBA" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.PRUEBA_BOMBA, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>

                <div class=" col-md-3">
                    <label for="CARGADOR_BATERIA" class=" form-control-label">Cargador Bateria</label>
                </div>
                <div class=" col-md-3">

                    @Html.TextBoxFor(m => m.CARGADOR_BATERIA, new { @class = "form-control", @placeholder = "°" })
                    @Html.ValidationMessageFor(m => m.CARGADOR_BATERIA, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row form-group" style="padding-left:2em;">
                <div class=" col-md-3">
                    <label class=" form-control-label">Posicion breakers</label>
                </div>
                <div class=" col-md-1">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="POSICION_BREAKERS" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.POSICION_BREAKERS, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>

                <div class=" col-md-3">
                    <label for="NIVEL_COMBUSTIBLE" class=" form-control-label">Nivel Combustible Tanque</label>
                </div>
                <div class=" col-md-3">
                    @Html.TextBoxFor(m => m.NIVEL_COMBUSTIBLE, new { @class = "form-control", @placeholder = "°" })
                    @Html.ValidationMessageFor(m => m.NIVEL_COMBUSTIBLE, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row form-group" style="padding-left:2em;">
                <div class=" col-md-4">
                    <label class=" form-control-label">Estados contactos de la bateria</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="CONTACTOS_BATERIA" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.CONTACTOS_BATERIA, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
                <div class=" col-md-4">
                    <label class=" form-control-label">Fuga de aceite</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="FUGA_ACEITE" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.FUGA_ACEITE, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group" style="padding-left:2em;">
                <div class=" col-md-4">
                    <label class=" form-control-label">Tablero Generador 1</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="TABLERO_G1" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.TABLERO_G1, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
                <div class=" col-md-4">
                    <label class=" form-control-label">Tablero Generador 2</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="TABLERO_G2" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.TABLERO_G2, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
            </div>




            <hr />
            <h4> <label style="padding-left:20px;" class=" form-control-label">Tanque de Combustible</label> </h4>
            <hr />



            <div class="row form-group"  style="padding-left:2em;">
                <div class=" col-md-3">
                    <label class=" form-control-label">Extintor</label>
                </div>
                <div class=" col-md-1">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="EXTINTOR" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.EXTINTOR, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
                <div class=" col-md-2">
                    <label for="text-input" class=" form-control-label">Nivel de Gasoil</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.NIVEL_GASOIL, new { @class = "form-control", @placeholder = "°" })
                    @Html.ValidationMessageFor(m => m.NIVEL_GASOIL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row form-group" style="padding-left:2em;">
                <div class=" col-md-4">
                    <label class=" form-control-label">Valvula de desague</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="VALVULA_DESAGUE" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.VALVULA_DESAGUE, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
                <div class=" col-md-4">
                    <label class=" form-control-label">Desague Obstruido</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="DESAGUE_OBSTRUIDO" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.DESAGUE_OBSTRUIDO, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
            </div>

          
            <div class="row form-group"  style="padding-left:2em;">
                <div class=" col-md-4">
                    <label class=" form-control-label">Valvulas de Tanques</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="VALVULA_TANQUES" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.VALVULA_TANQUES, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
                <div class=" col-md-4">
                    <label class=" form-control-label">Observar Letreros</label>
                </div>
                <div class=" col-md-2">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="LETREROS" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.LETREROS, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row form-group"  style="padding-left:2em;">
                <div class="col col-md-3">
                    <label class=" form-control-label">Limpieza General</label>
                </div>
                <div class="col col-md-3">
                    <div class="form-check">
                        <div class="checkbox">
                            <label for="LIMPIEZA_GENERAL" class="form-check-label ">
                                @Html.CheckBoxFor(m => m.LIMPIEZA_GENERAL, new { @class = "form-check-input" }) *
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i>  @*Html.ActionLink("Enviar", "ODCOffice", "Rooms", null, new { @class = "btn-primary" })*@
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    </div>  

}
